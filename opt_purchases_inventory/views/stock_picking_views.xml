<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_stock_move_line_detailed_operation_tree_add_field" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.add.field</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="analytic_account_id" optional="hide"
                       attrs="{'readonly': [('parent.is_analytic_account', '=', True)]}"/>
            </field>
        </field>
    </record>

    <record id="stock_picking_form_view_add_field" model="ir.ui.view">
        <field name="name">stock.picking.form.view.add.field</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="location_dest_id" position="after">
                <field name="is_analytic_account" invisible="1"/>
            </field>
            <xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='product_id']" position="after">
                <field name="analytic_account_line_id"/>
            </xpath>
        </field>
    </record>
</odoo>
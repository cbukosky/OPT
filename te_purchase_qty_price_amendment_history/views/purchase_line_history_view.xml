<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="te_purchase_order_line_history_view" model="ir.ui.view">
            <field name="name">Purchase Order Line History</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
	            <notebook position="inside">
	                <page string="Purchase Qty / Price Amendment History" groups="purchase.group_purchase_manager">
	                    <field name="history_line_ids">
	                    	<tree>
                                <field name="change_on_date"/>
	                    		<field name="product_id"/>
	                    		<field name="product_uom_id"/>
	                    		<field name="old_product_qty"/>
	                    		<field name="new_product_qty"/>
	                    		<field name="old_price_unit"/>
	                    		<field name="new_price_unit"/>
	                    		<field name="purchase_line_id" invisible="1"/>
	                    		<field name="order_id" invisible="1"/>
	                    	</tree>
	                    </field>
	                </page>
	            </notebook>
            </field>
        </record>

    </data>
</odoo>
